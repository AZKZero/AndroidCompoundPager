<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pager_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_image_pager_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicator="@null"
        app:tabIndicatorColor="@color/pager_tab_indicator_color"
        app:tabSelectedTextColor="@color/pager_tab_selected_text_color"
        app:tabTextColor="#000000" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_image_pager_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabIndicator="@null"
        app:tabIndicatorColor="@color/pager_tab_indicator_color"
        app:tabSelectedTextColor="@color/pager_tab_selected_text_color"
        app:tabTextColor="#000000" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_image_pager_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicator="@null"
        app:tabIndicatorColor="@color/pager_tab_indicator_color"
        app:tabSelectedTextColor="@color/pager_tab_selected_text_color"
        app:tabTextColor="#000000" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_image_pager_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicator="@null"
        app:tabIndicatorColor="@color/pager_tab_indicator_color"
        app:tabSelectedTextColor="@color/pager_tab_selected_text_color"
        app:tabTextColor="#000000" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/image_pager"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@id/tab_layout_image_pager_bottom"
        app:layout_constraintLeft_toRightOf="@id/tab_layout_image_pager_left"
        app:layout_constraintRight_toLeftOf="@id/tab_layout_image_pager_right"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_image_pager_top" />
</androidx.constraintlayout.widget.ConstraintLayout>
